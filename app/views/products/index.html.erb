<h1>Produkty</h1>

<div style="text-align: center; margin-bottom: 20px;">
  <%= link_to 'Dodaj nowy produkt', new_product_path, class: 'btn btn-success', style: "padding: 10px 20px; background-color: #28a745; color: white; text-decoration: none; border-radius: 5px;" %>
  <%= link_to 'Powrót na stronę główną', root_path, class: 'btn btn-secondary', style: "padding: 10px 20px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 5px;" %>
</div>

<table style="border-collapse: collapse; width: 80%; margin: 20px auto; border: 1px solid #ddd; font-size: 14px;">
  <thead>
  <tr>
    <th style="padding: 12px; text-align: left;">Nazwa</th>
    <th style="padding: 12px; text-align: left;">Ilość</th>
    <th style="padding: 12px; text-align: left;">Kategorie</th>
    <th style="padding: 12px; text-align: left;">Użytkownik</th>
    <th style="padding: 12px; text-align: left;">Akcje</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= product.name %></td>
      <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= product.quantity %></td>
      <td style="padding: 10px; border-bottom: 1px solid #ddd;">
        <% if product.categories.any? %>
          <%= product.categories.map(&:name).join(", ") %>
        <% else %>
          Brak kategorii
        <% end %>
      </td>
      <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= product.user.name %></td>
      <td style="padding: 10px; border-bottom: 1px solid #ddd;">
        <%= link_to 'Informacje o Produkcie', product_path(product), class: 'btn btn-info btn-sm' %> |
        <%= link_to 'Edytuj', edit_product_path(product), class: 'btn btn-primary btn-sm' %> |
        <%= link_to 'Usuń', product_path(product), method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć ten produkt?' }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
